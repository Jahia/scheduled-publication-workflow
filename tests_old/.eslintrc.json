{
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "cypress"
    ],
    "extends": [
        "plugin:cypress/recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "cypress/no-async-tests": "off",
        "no-var-requires": 0
    },
    "root": true
}
